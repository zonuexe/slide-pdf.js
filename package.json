{
  "name": "slide-pdf.js",
  "description": "pdf slide on the web.",
  "version": "1.0.0",
  "homepage": "https://github.com/azu/slide-pdf.js/",
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/slide-pdf.js.git"
  },
  "main": "index.js",
  "scripts": {
    "bundle": "esbuild src/main.ts --bundle --format=esm --platform=browser --target=es2020 --external:pdfjs-dist --external:pdfjs-dist/* --sourcemap --outfile=build/app.js",
    "build": "npm run bundle && node scripts/copy-assets.js",
    "watch": "esbuild src/main.ts --bundle --format=esm --platform=browser --target=es2020 --external:pdfjs-dist --external:pdfjs-dist/* --sourcemap --outfile=build/app.js --watch",
    "start": "npm run build && static-server",
    "test": "echo \"No automated tests defined\""
  },
  "directories": {
    "test": "test/"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "azu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/azu/slide-pdf.js/issues"
  },
  "dependencies": {
    "fingers.js": "git://github.com/paztis/fingers.js",
    "lodash.throttle": "^3.0.3",
    "@zonuexe/pdf.js-controller": "^1.1.0",
    "pdfjs-dist": "^5.4.296"
  },
  "devDependencies": {
    "esbuild": "^0.25.11",
    "static-server": "^2.0.2"
  }
}
